  <div>
    <!-- Loop through destinations -->
    <% @destinations.each do |d| %>
      <div>
        <!-- Show destination name -->
        Name: <%= d.name %><br>
        <!-- Setup form for creating new bucketlist items -->
        <% if current_user %>
          <% if false  %>
            <div>
              <%= button_to "Add to Bucketlist", "/bucketlist", params: {destination_id: d.id}, method: "post" %>
            </div>
          <% end %>
          <% if current_user.has_bucket_list_item?(d.id) %>
            <%= link_to "Remove from Bucket List", { :controller => "bucketlist_items",
                          :action => "destroy",
                          :id => d.id },
                          :method => :delete %>
          <% else %>
            <%= form_for BucketlistItem.new do |f| %>
              <!-- Enter destination id -->
              <%= f.hidden_field :destination_id, value: d.id %>
              <%= f.submit "Add to Bucket List" %>
            <% end %>
          <% end %>
        <% end %>
        <!-- Show destination certification -->
        Certification: <%= d.certification %>
        <br>
        ID: <%= d.id %>
      </div>
    <% end %>
  </div>

  <div class="gap"></div>

