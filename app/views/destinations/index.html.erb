        <!-- Setup form for creating new bucketlist items -->
        <%= form_for :bucketlist, :url => url_for(:controller => 'bucketlists', :action => 'new') do |f| %>
          <!-- Enter destination id -->
          <%= f.label :destination_id %>:
          <%= f.text_field :destination_id %>
