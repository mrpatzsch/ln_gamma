<%= render 'head' %>
<%= render 'nav' %>

        <div class="container">
            <div class="row" data-gutter="60">
                <div class="col-md-4">
                    <h3>Welcome to LOTUS Nomads!</h3>
                    <p>Do you love traveling the world with a conscience as much as we do? Yeah, we thought so. Sign up and discover even more of the incredible places our globetrotters have dug up justfor you. You'll be packing your bags in no time. </p>
                </div>
                <div class="col-md-4">
                    <h3>Login</h3>
                    <form>
                    	<%= form_tag do %>
                        <div class="form-group form-group-icon-left"><i class="fa fa-user input-icon input-icon-show"></i>
                            <label>Email</label></br>
                            <%= email_field(:user, :address) %>
                            
                        </div>

                        <div class="form-group form-group-icon-left"><i class="fa fa-lock input-icon input-icon-show"></i>
                            <label>Password</label></br>
                            <%= password_field_tag(:password) %>
                        
                        </div>

                        <input class="btn btn-primary" type="submit" value="Bon Voyage!" />
                        <% end %>
                    </form>
                </div>
                <div class="col-md-4">
                    <h3>New To Traveler?</h3>
                    <form>
                    <%= form_tag do %>
                        <div class="form-group form-group-icon-left"><i class="fa fa-user input-icon input-icon-show"></i>
                            <label>First Name</label></br>
                            <%= text_field(:user, :first_name) %>
                        </div>
                        <div class="form-group form-group-icon-left"><i class="fa fa-user input-icon input-icon-show"></i>
                            <label>Last Name</label></br>
                            <%= text_field(:user, :last_name) %>
                        </div>
                          <div class="form-group form-group-icon-left"><i class="fa fa-user input-icon input-icon-show"></i>
                            <label>Email</label></br>
                            <%= email_field(:user, :address) %>
                            
                        </div>

                        <div class="form-group form-group-icon-left"><i class="fa fa-lock input-icon input-icon-show"></i>
                            <label>Password</label></br>
                            <%= password_field_tag(:password) %>
                        
                        </div>
                        </div>
                        <input class="btn btn-primary" type="submit" value="Sign up for LOTUS Nomads" />
                    <% end %>
                    </form>
                </div>
            </div>
        </div>
<div class="gap"></div>


<%= render 'footer' %>